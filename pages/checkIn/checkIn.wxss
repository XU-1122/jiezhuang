.container {
  padding: 20rpx;
  background-color: #f0f0f0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.marker-details {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 95%;
  margin-bottom: 20rpx;
}

.detail-item {
  font-size: 35rpx;
  margin-bottom: 19rpx;
  color: #333;
  line-height: 1.5;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.photo-check-in-button,
.confirm-upload-button {
  width: 220rpx;
  height: 70rpx;
  background-color: #1e90ff;
  color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.15);
  margin-top: 20rpx;
  transition: background-color 0.3s;
}

.photo-check-in-button:hover,
.confirm-upload-button:hover {
  background-color: #007aff;
}

.photo-thumbnail {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
} 