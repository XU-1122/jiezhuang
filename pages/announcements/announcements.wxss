.container {
  height: 100vh; /* 设置高度以启用滚动 */
  padding: 15rpx;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.announcement-card {
  width: 100%;
  max-width: 700rpx;
  margin-bottom: 10rpx;
  padding: 15rpx;
  border-radius: 8rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.announcement-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #007aff; /* 设置标题为蓝色 */
  margin-bottom: 10rpx;
}

.announcement-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.announcement-footer {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
  line-height: 1.5;
} 