.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: linear-gradient(to bottom, #2c3e50, #bdc3c7);
}

.login-card {
  width: 95%;
  max-width: 500rpx;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #6c25df;
  margin-bottom: 30rpx;
}

.login-input {
  width: 100%;
  padding: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.login-button {
  width: 100%;
  padding: 12rpx;
  background-color: #07d322;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
} 