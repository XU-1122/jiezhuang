<!--pages/myInfo/myInfo.wxml-->
<view class="container">
  <view class="app-info">
    <view class="info-item">
      <text class="info-title">当前用户:</text>
      <text class="info-content">{{currentUser}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">工号:</text>
      <text class="info-content">{{employeeId}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">软件名称:</text>
      <text class="info-content">{{appInfo.name}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">软件版本:</text>
      <text class="info-content">{{appInfo.version}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">版权所有:</text>
      <text class="info-content">{{appInfo.copyright}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">联系我们:</text>
      <text class="info-content">{{appInfo.contact}}</text>
    </view>
  </view>
</view>