/* pages/myInfo/myInfo.wxss */
.container {
  padding: 0;
  text-align: left;
  background-color: #f8f6f6;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.username {
  font-size: 32rpx;
  margin-top: 8rpx;
  color: #333;
  font-weight: bold;
}

.get-user-info {
  margin-top: 15rpx;
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-info {
  margin: 0;
  background-color: #ffffff;
  border-radius: 0;
  box-shadow: none;
  padding: 30rpx;
  width: 90%;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 8rpx 0;
  border-bottom: 3rpx solid #eaeaea;
}

.info-title {
  font-weight: 900;
  color: #333;
  font-size: 30rpx;
  flex: 1;
  text-align: left;
}

.info-content {
  font-weight: 400;
  color: #666;
  font-size: 28rpx;
  flex: 1;
  text-align: right;
}