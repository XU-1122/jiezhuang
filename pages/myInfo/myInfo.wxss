/* pages/myInfo/myInfo.wxss */
.container {
  width: 100%;
  padding: 0;
  text-align: left;
  background-color: #f8f6f6;
  min-height: 95vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  box-sizing: border-box;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 1rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.username {
  font-size: 32rpx;
  margin-top: 8rpx;
  color: #333;
  font-weight: bold;
}

.get-user-info {
  margin-top: 15rpx;
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-info {
  width: 100%;
  margin: 0;
  background-color: #ffffff;
  border-radius: 0;
  box-shadow: none;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 8rpx 0;
  border-bottom: 3rpx solid #eaeaea;
}

.info-title {
  font-weight: 900;
  color: #333;
  font-size: 30rpx;
  flex: 1;
  text-align: left;
  margin-left: 25rpx;
  
}

.info-content {
  font-weight: 440;
  color: #666;
  font-size: 28rpx;
  flex: 1;
  text-align: right;
  margin-right: 30rpx; /* 向左移动文本 */
}

.announcement-title {
  font-size: 36rpx !important;
  font-weight: bold !important;
  color: #333 !important;
  margin-bottom: 10rpx !important;
}

.announcement-content {
  font-size: 28rpx !important;
  color: #666 !important;
  margin-bottom: 10rpx !important;
  line-height: 1.5 !important;
}

.announcement-footer {
  font-size: 24rpx !important;
  color: #999 !important;
  text-align: right !important;
  margin-top: 10rpx !important;
  line-height: 1.5 !important;
}

.my-info-container {
  padding: 20rpx;
}

.logout-button {
  width: 90%;
  padding: 14rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  margin-top: 30rpx;
  transition: background-color 0.3s;
  margin-left: auto;
  margin-right: auto;
}

.logout-button:hover {
  background-color: #e33e3e;
}

.password-container {
  position: relative;
  width: 100%;
}

.login-input {
  width: 90%;
  padding: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding-right: 40rpx; /* 为图标留出空间 */
}

.toggle-password {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  cursor: pointer;
}